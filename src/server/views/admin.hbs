
<div class="flex center items-start justify-start w-80">


  <form action="/admin" method="post" class="flex items-start justify-start flex-column">
    {{#if error}}
      <span class="mt1 red ba br1 tc pa1">{{error}}</span>
    {{/if}}

    <label for="user" class="mt3">Username:</label>
    <input type="text" id="user" name="username" required>

    <label for="email" class="mt3">Email:</label>
    <input type="email" id="email" name="email" required>

    <label for="pass" class="mt3">Password:</label>
    <input type="password" id="pass" name="password" required>

    <label for="confirm" class="mt3">Confirm password:</label>
    <input type="password" id="confirm" name="confirmPassword" required>


    <input type="submit" class="mt4">
  </form>

</div>
